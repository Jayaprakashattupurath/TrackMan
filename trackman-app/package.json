{
  "name": "trackman-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors bgBlue.bold,bgMagenta.bold \"npm run server:dev\" \"npm run client:dev\"",
    "dev:windows": "dev.bat",
    "dev:powershell": "powershell -ExecutionPolicy Bypass -File dev.ps1",
    "client:dev": "next dev --turbopack",
    "server:dev": "nodemon server/server.ts",
    "build": "next build --turbopack",
    "start": "concurrently --kill-others-on-fail --prefix-colors bgBlue.bold,bgMagenta.bold \"npm run server:start\" \"npm run client:start\"",
    "client:start": "next start",
    "server:start": "node server/server.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "server:type-check": "tsc --noEmit server/**/*.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
